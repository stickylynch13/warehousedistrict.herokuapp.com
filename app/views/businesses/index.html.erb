<h1>Listing businesses</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Category</th>
    <th>Address</th>
    <th>Phone</th>
    <th>Website</th>
    <th>Member</th>
    <th>Logo url</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @businesses.each do |business| %>
  <tr>
    <td><%= business.name %></td>
    <td><%= ['General', 'Restaurant', 'Real Estate'][business.category_id] %></td>
    <td><%= business.address %></td>
    <td><%= business.phone %></td>
    <td><%= business.website %></td>
    <td><%= business.member %></td>
    <td><%= business.logo_url %></td>
    <td><%= business.description %></td>
    <td><%= link_to 'Show', business %></td>
    <td><%= link_to 'Edit', edit_business_path(business) %></td>
    <td><%= link_to 'Destroy', business, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

